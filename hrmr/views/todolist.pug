extends layout

block content 
  div(class="Todotitle")
    h1 Todo List
  div(class="todo")
    br
    br
    br
    br
    //- 저장된 todo
    each todo in todolist
      div(style="height:50px; margin-left:350px; text-decoration: underline;")
        div(class="field is-grouped")
          div(class="control is-expanded")
            p(class="title is-3")=todo.todo_text 
          div(class="control")
            a(class="button is-info")
              input(type="button", class="stopwatch-btn", value="STOPWATCH" todo_id=todo.todo_id)
          div(class="control")
            button(class="delete-btn" todo_id=todo.todo_id)
              span(class="icon")
                i(class="fas fa-trash-alt")
                br
    
  br
  br
  br
  div(class="todoplus")
    input(type='text' id='newtodotext')
    button(id="newTodo" class="button")
      span(class="icon")
        i(class='fas fa-plus')

  div(id='chartdiv' style='width:90%; height:500px')

  script(src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js')
  script(src='https://cdn.amcharts.com/lib/5/index.js')
  script(src='https://cdn.amcharts.com/lib/5/xy.js')
  script(src='https://cdn.amcharts.com/lib/5/themes/Animated.js')
  script(src='/javascripts/todolist.js') 